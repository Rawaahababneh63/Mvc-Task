@model MiniSchool.Models.User

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-5 col-lg-4 col-xl-4">
                <img src="~/Content/image/f773a0365d6eda331dc84fdda02831ac.jpg" class="img-fluid custom-img" alt="Description of image">
            </div>
            <div class="col-md-6 col-lg-5 col-xl-4 offset-xl-1">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <!-- الفورم -->
                    <div class="form-container p-4">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            @Html.TextBoxFor(m => m.Email, new { id = "form3Example3", @class = "form-control form-control-lg", placeholder = "Enter a valid email address", required = "required" })
                            @Html.LabelFor(m => m.Email, new { @class = "form-label", })
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            @Html.PasswordFor(m => m.Password, new { id = "form3Example4", @class = "form-control form-control-lg", placeholder = "Enter password", required = "required" })
                            @Html.LabelFor(m => m.Password, new { @class = "form-label", })
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-danger btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #ff0000;
    }
    .btn-danger {
        background-color: red; /* يمكنك استخدام أي لون آخر هنا */
        border-color: red; /* لتغيير لون الحدود أيضاً */
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    /* تصغير حجم الصورة */
    .custom-img {
        max-width: 100%; /* عرض الصورة لا يتجاوز عرض العمود */
        height: auto; /* المحافظة على نسبة العرض إلى الطول */
        max-height: 300px; /* تحديد أقصى ارتفاع للصورة */
        object-fit: cover; /* جعل الصورة تتناسب مع الحجم بدون تشويه */
    }

    /* ستايل للفورم مع بوردر وظل */
    .form-container {
        border: 2px solid #ff0000; /* لون الإطار الأخضر */
        box-shadow: 0px 4px 10px #ff0000; /* ظل أخضر */
        border-radius: 10px; /* لتنعيم الحواف */
        background-color: #fff; /* خلفية بيضاء للفورم */
    }

    /* عندما تكون الشاشة صغيرة */
    @@media (max-width: 450px) {
        .h-custom {
            height: 100%;
        }

        .custom-img {
            max-height: 200px; /* تقليل ارتفاع الصورة على الشاشات الصغيرة */
        }

        .form-container {
            border-width: 1px; /* تقليل سماكة الإطار على الشاشات الصغيرة */
            box-shadow: 0px 2px 5px rgba(40, 167, 69, 0.5); /* تقليل ظل الفورم على الشاشات الصغيرة */
        }
    }
</style>


